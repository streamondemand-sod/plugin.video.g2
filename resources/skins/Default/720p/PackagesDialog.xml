<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>0</zorder>
	<coordinates>
		<posx>170</posx>
	    <posy>180</posy>
	</coordinates>
	<controls>
		<!-- Background -->
		<control type="image" id="1">
			<left>-20</left>
			<top>-20</top>
            <width>980</width>
            <height>400</height>
            <texture border="40">bg.png</texture>
		</control>

		<!-- Window title -->
		<control type="label">
			<left>10</left>
			<top>10</top>
			<width>960</width>
			<height>20</height>
			<align>center</align>
			<textcolor>white</textcolor>
			<!-- fixme: translate -->
			<label>G2 - PACKAGE MANAGER</label>
			<font>font15_title</font>
		</control>

		<!-- List of buttons for selecting the packages kind -->
		<control type="group">
			<left>10</left>
			<top>45</top>
	        <control type="image">
		        <left>-1</left>
		        <top>-2</top>
		        <width>190</width>
		        <height>310</height>
		        <texture border="5">inner.png</texture>
		    </control>
			<control type="list" id="101">
				<left>0</left>
				<top>0</top>
				<width>190</width>
				<height>300</height>
				<orientation>vertical</orientation>
		        <texture border="5">inner.png</texture>
				<itemlayout width="190" height="30">
					<control type="label">
						<align>right</align>
						<aligny>center</aligny>
						<width>180</width>
						<textcolor>grey2</textcolor>
						<font>font14</font>
						<label>[CAPITALIZE]$INFO[ListItem.Label][/CAPITALIZE]</label>
					</control>
				</itemlayout>
				<focusedlayout width="190" height="30">
					<control type="label">
						<align>right</align>
						<aligny>center</aligny>
						<width>180</width>
						<textcolor>white</textcolor>
						<font>font14</font>
						<label>[CAPITALIZE]$INFO[ListItem.Label][/CAPITALIZE]</label>
					</control>
	                <control type="image">
	                    <left>0</left>
	                    <top>0</top>
	                    <texture border="4">listselect_fo.png</texture>
	                    <visible>Control.HasFocus(101)</visible>
					</control>
				</focusedlayout>
			</control>
		</control>

		<!-- List of labels for selecting the package -->
		<control type="group">
			<left>210</left>
			<top>45</top>
	        <control type="image">
		        <left>-1</left>
		        <top>-2</top>
		        <width>722</width>
		        <height>310</height>
		        <texture border="5">inner.png</texture>
		    </control>
			<control type="list" id="201">
				<left>0</left>
				<top>0</top>
				<width>720</width>
				<height>300</height>
				<orientation>vertical</orientation>
				<pagecontrol>1001</pagecontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<itemlayout width="720" height="30">
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>620</width>
						<height>30</height>
						<textcolor>grey2</textcolor>
						<font>font14</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>630</left>
						<top>0</top>
						<width>50</width>
						<height>30</height>
						<align>right</align>
						<textcolor>grey2</textcolor>
						<font>font14</font>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<control type="image">
						<left>680</left>
						<top>0</top>
			            <width>30</width>
			            <height>30</height>
	                    <texture>$INFO[ListItem.Overlay,overlays/list/]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="720" height="30">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>720</width>
                        <height>30</height>
                        <texture border="4">listselect_fo.png</texture>
                        <visible>Control.HasFocus(201)</visible>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>620</width>
						<height>30</height>
						<textcolor>white</textcolor>
						<font>font14</font>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>630</left>
						<top>0</top>
						<width>50</width>
						<height>30</height>
						<align>right</align>
						<textcolor>white</textcolor>
						<font>font14</font>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<control type="image">
						<left>680</left>
						<top>0</top>
			            <width>30</width>
			            <height>30</height>
	                    <texture>$INFO[ListItem.Overlay,overlays/list/]</texture>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="scrollbar" id="1001">
			<left>732</left>
			<top>70</top>
			<width>8</width>
			<height>280</height>
			<texturesliderbackground>-</texturesliderbackground>
			<texturesliderbar colordiffuse="55ffffff" border="1">texturesliderbar2.png</texturesliderbar>
			<texturesliderbarfocus border="1">texturesliderbar2.png</texturesliderbarfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
	</controls>
</window>
