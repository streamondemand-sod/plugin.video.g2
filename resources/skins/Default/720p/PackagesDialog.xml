<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>0</zorder>
	<coordinates>
		<posx>170</posx>
	    <posy>180</posy>
	</coordinates>
	<controls>
		<!-- Background -->
		<control type="image" id="1">
			<left>-20</left>
			<top>-20</top>
            <width>980</width>
            <height>400</height>
            <texture border="40">bg.png</texture>
		</control>
		<!-- Window title -->
		<control type="label">
			<left>10</left>
			<top>0</top>
			<width>960</width>
			<height>20</height>
			<align>center</align>
			<textcolor>white</textcolor>
			<!-- TODO: translate -->
			<label>PACKAGE MANAGER</label>
		</control>

		<!-- List of buttons for selecting the packages kind -->
		<control type="list" id="101">
			<left>10</left>
			<top>25</top>
			<width>200</width>
			<height>320</height>
			<orientation>vertical</orientation>
	        <texture border="5">inner.png</texture>
			<itemlayout width="200" height="50">
				<control type="label">
					<align>left</align>
					<aligny>center</aligny>
					<width>200</width>
					<height>40</height>
					<font>font30</font>
					<textcolor>grey2</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="200" height="50">
				<control type="label">
					<align>left</align>
					<aligny>center</aligny>
					<width>200</width>
					<height>40</height>
					<font>font30</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>200</width>
                    <height>40</height>
                    <texture border="4">listselect_fo.png</texture>
                    <visible>Control.HasFocus(101)</visible>
				</control>
			</focusedlayout>
		</control>

		<!-- List of labels for selecting the package -->
		<control type="group">
			<left>210</left>
			<top>25</top>
	        <control type="image">
		        <left>-1</left>
		        <top>-2</top>
		        <width>722</width>
		        <height>334</height>
		        <texture border="5">inner.png</texture>
		    </control>
			<!-- Scrollable List of Plugin -->
			<control type="list" id="201">
				<left>0</left>
				<top>0</top>
				<width>720</width>
				<height>320</height>
				<orientation>vertical</orientation>
				<pagecontrol>1001</pagecontrol>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<itemlayout width="720" height="30">
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>670</width>
						<height>30</height>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>680</left>
						<top>0</top>
			            <width>30</width>
			            <height>30</height>
	                    <texture>$INFO[ListItem.Overlay,overlays/list/]</texture>
					</control>
				</itemlayout>
				<focusedlayout width="720" height="30">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>720</width>
                        <height>30</height>
                        <texture border="4">listselect_fo.png</texture>
                        <visible>Control.HasFocus(201)</visible>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>670</width>
						<height>30</height>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="image">
						<left>680</left>
						<top>0</top>
			            <width>30</width>
			            <height>30</height>
	                    <texture>$INFO[ListItem.Overlay,overlays/list/]</texture>
					</control>
				</focusedlayout>
			</control>
		</control>
		<control type="scrollbar" id="1001">
			<left>732</left>
			<top>70</top>
			<width>8</width>
			<height>280</height>
			<texturesliderbackground>-</texturesliderbackground>
			<texturesliderbar colordiffuse="55ffffff" border="1">texturesliderbar2.png</texturesliderbar>
			<texturesliderbarfocus border="1">texturesliderbar2.png</texturesliderbarfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>
	</controls>
</window>
